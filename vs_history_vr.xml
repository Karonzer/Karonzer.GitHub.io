<krpano onstart="playBGM();" minimap="" startscene = "" currentscene = "ty_hsd" bgmpath = "" voicepath="" effectpath = "" videoPath = "" retimespot="" popupvr="" debugmode="true" videostatus="out">

  <krpano CirclesControlBarNo="true" CirclesControlBarbarbuilt="false" CirclesControlBarbackgroundwidthwhenclosed="0" CirclesControlBarbackgroundwidthwhenopened="0" CirclesControlBarIsOpened="false" tour_soundson="true" vrmode_on="false" />

  <!-- 마우스 오버 시 텍스트 표현 xml 로딩 -->
  <include url="%FIRSTXML%/plugins/showtext.xml" />
  <!-- VR 셋팅 xml 로딩 -->
  <include url="%FIRSTXML%/source/common/settings/vr_setting.xml" />
  <!-- 비디오 플레이어 셋팅 xml 로딩 -->
  <include url="%FIRSTXML%/source/common/settings/videoplayer_setting.xml" />

  <!-- 사운드 플러그인 로딩 -->
  <plugin name="soundinterface"
      url.flash="%FIRSTXML%/plugins/soundinterface.swf"
      url.html5="%FIRSTXML%/plugins/soundinterface.js"
      preload="true"
      rootpath="%FIRSTXML%/source"
      keep ="true"
      volume="1.0"
      mute="false"
  />


  <!-- Include -->
  <include url="%FIRSTXML%/include/ActionManager.xml" />
  <include url="%FIRSTXML%/include/StyleManager.xml" />
  <include url="%FIRSTXML%/include/LayerManager.xml" />
  <include url="%FIRSTXML%/include/EventManager.xml" />
  <include url="%FIRSTXML%/include/SceneManager.xml" />
  <include url="%FIRSTXML%/include/CirclesControlBar.xml" />
  <include url="%FIRSTXML%/include/MiniMap.xml" />
  <include url="%FIRSTXML%/include/PopUp.xml" />
  <include url="%FIRSTXML%/include/NewVideoPlayer.xml" />

  <!-- 파노라마 자동 회전 -->
  <autorotate enabled="true" waittime="2.5" speed="0.7" />

  <!-- startup action - load the first scene -->
  <action name="startup" autorun="onstart">
	  if((startscene !== "") AND scene[calc(startscene + "_1")], start_tour(get(startscene)),
	  loadscene(commonmap, null, MERGE, BLEND(1));
	  no_menu();
	  set(layer[sidemenu].visible, true);
	  delayedcall(1, tween(layer[sidemenu].alpha, 1.0, 1););
	  updateminimap(ty_hsd_spot1, -110, false);
	  Start_BGM(ty_hsd);
	  );


	  <!--아래 해당 프로젝트 맞게 추가 기능-->
	  updateAirSpot(ty_hsd_spot15, -90);
	  set(minimap, calc: currentscene + "_minimap");
	  set(layer[get(minimap)].visible, true);
	  delayedcall(1.1, tween(layer[get(minimap)].alpha, 1.0, 1););
  </action>


</krpano>
